<% provide(:title, 'Reporting Your Political Contributions') %>

<div class="container row">
	
	<h2>Reporting Your Political Contributions</h2>

	<div class ="pull-right range-query">
		<%= form_tag contributions_report_path, method: :get do %>
			<%= date_field 'search[date_from', @search.date_from, class: "date_from" %>
			<%= date_field 'search[date_to', @search.date_to %>
			<%= submit_tag "Search", class: "btn search-btn" %>
		<% end %>
	</div>
</div>

<div class="media container">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Recipient</th>
          <th>Amount</th>
          <th>Notes</th>
        </tr>
      </thead>
			<tbody>
        <% @lobbyist_contributions.each do |con| %>
          <tr>
            <td><%= con.date.strftime("%Y-%m-%d") %></td>
            <td><%= con.recipient %></td>
            <td><%= con.amount %></td>
            <td><%= con.notes %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>