<% provide(:title, 'Reporting Your Political Activities') %>

<div class="container row">
	
	<h2>Reporting Your Political Activities</h2>

  <div class ="pull-right range-query">
    <%= form_tag(activities_report_path, method: 'get') do %>
      <%= label_tag :q, "Start" %>
      <%= text_field(:q, params[:q]) %>
      <%= label_tag :q2, "End" %>
      <%= text_field(:q2, params[:q2]) %>
      <%= submit_tag('Search') %>
    <% end %>
  </div>

</div>

<div class="media container">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Activity Type</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Subject</th>
        </tr>
      </thead>
			<tbody>
        <% @lobbyist_activities.each do |act| %>
          <tr>
            <td><%= act.date.strftime("%Y-%m-%d") %></td>
            <td><%= act.activity_type %></td>
            <td><%= act.start.strftime("%H:%M") %></td>
            <td><%= act.end.strftime("%H:%M") %></td>
            <td><%= act.subject %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>