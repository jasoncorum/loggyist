<p>
<%= form_for @activity do |f| %>
	<div class="form-group">
		<%= f.label :type, "Please enter the type of political activity:", class: "control-label" %><br />
		<%= f.select :type, [['Phone Call'], ['Meeting']], autofocus: true, class: "form-control" %></div>
	
		<div class="form-group">
		<%= f.label :date, "Please enter the date of your political activity:", class: "control-label" %><br />
		<%= f.date_select :date, class: "form-control" %></div>

		<div class="form-group">
		<%= f.label :start, "Please enter the start time:", class: "control-label" %><br />
		<%= f.time_select :start, default: Time.now, minute_step: 15, ampm: true, in_time_zone: true, class: "form-control" %></div>

		<div class="form-group">
		<%= f.label :end, "Please enter the end time:", class: "control-label" %><br />
		<%= f.time_select :end, default: Time.now, minute_step: 15, ampm: true, in_time_zone: true, class: "form-control" %></div>

		<div class="form-group">
		<%= f.label :subject, "Please enter the subject of your activity:", class: "control-label" %><br />
		<%= f.text_area :subject, class: "form-control" %></div>
</p>

  <p><%= f.submit "Save", class: "btn btn-primary btn-lg" %></p>
<% end %>